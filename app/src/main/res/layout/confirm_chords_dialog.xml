<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/conf_chords_note_naming_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/conf_chord_note_naming_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:text="@string/pref_note_naming_title" />

        <Spinner
            android:id="@+id/transpose_note_naming_spinner_conf_chords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <EditText
        android:id="@+id/conf_chord_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="monospace"
        android:inputType="textMultiLine"
        android:saveEnabled="true"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:typeface="monospace" />

</LinearLayout>
