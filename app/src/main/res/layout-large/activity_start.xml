<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/start_activity_main_view"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000">

	<TextureView
		android:id="@+id/video_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clickable="false"
		android:focusable="false"
		android:focusableInTouchMode="false" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:orientation="vertical">

		<Button
			android:id="@+id/button_web_search"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/button_blue_glow_selector"
			android:text="@string/web_search"
			android:textSize="28sp" />

		<Button
			android:id="@+id/button_local_songs"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="-50dp"
			android:background="@drawable/button_blue_glow_selector"
			android:text="Songs"
			android:textSize="28sp" />

		<Button
			android:id="@+id/button_playlists"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="-50dp"
			android:background="@drawable/button_blue_glow_selector"
			android:text="Playlists"
			android:textSize="28sp" />
	</LinearLayout>

</RelativeLayout>